/**
 * @fileoverview Firestore Security Rules for Trendify.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data, ensuring that only the authenticated user can access their own information.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, creating a hierarchical structure that simplifies authorization logic. Each user "owns" their profile, goals, content tasks, and social media account links.
 *
 * Key Security Decisions:
 * - User listing is explicitly disallowed to prevent unauthorized data enumeration.
 * - All writes are strictly validated against user ownership.
 * - Data consistency between paths and document fields is enforced on creation and updates to prevent privilege escalation.
 *
 * Denormalization for Authorization:
 * The data model uses path-based ownership to avoid costly `get()` calls within the security rules. Each document's parent path inherently defines its owner.
 *
 * Structural Segregation:
 * User-specific data is stored in private subcollections under `/users/{userId}`, ensuring that data is never unintentionally exposed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects against unauthorized access to the root of the database.
     */
    match /{document=**} {
      allow read, write: if false;
    }

    /**
     * @description Enforces access control for user profiles and their nested data.
     * @path /users/{userId}
     */
    match /users/{userId} {
      /**
       * @description Controls access to the user's main profile document.
       */
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Disallow listing all users
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);

      /**
       * @description Enforces access control for Instagram accounts linked to a user.
       */
      match /instagramAccounts/{instagramAccountId} {
        allow read, list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isSignedIn() && isExistingOwner(userId);
      }

      /**
       * @description Enforces access control for TikTok accounts and their nested videos.
       */
      match /tiktokAccounts/{tiktokAccountId} {
        allow get, list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isSignedIn() && isExistingOwner(userId);

        /**
         * @description Enforces access control for TikTok videos. The owner can read and write their own videos.
         */
        match /videos/{videoId} {
          allow read, list, write: if isSignedIn() && isOwner(userId);
        }
      }

      /**
       * @description Enforces access control for user-defined goals.
       */
      match /goals/{goalId} {
        allow read, list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isSignedIn() && isExistingOwner(userId);
      }

      /**
       * @description Enforces access control for content creation tasks.
       */
      match /contentTasks/{contentTaskId} {
        allow read, list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isSignedIn() && isExistingOwner(userId);
      }

      /**
       * @description Enforces access control for saved video ideas.
       */
       match /savedVideoIdeas/{ideaId} {
        allow read, list, write: if isSignedIn() && isOwner(userId);
      }
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }
  }
}
